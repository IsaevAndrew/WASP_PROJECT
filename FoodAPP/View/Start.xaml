        <Label Text="WELCOME TO FoodAPP" MaximumWidthRequest="150" FontSize="26" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        <Label Text="Let's start!" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Sign In" Margin="20" HorizontalOptions="Center" VerticalOptions="Center" Clicked="btn_Signin_Clicked"/>

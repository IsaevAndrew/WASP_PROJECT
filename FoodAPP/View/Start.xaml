<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:FoodAPP.ViewModel"
             x:Class="FoodAPP.View.Start">
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="WELCOME TO FoodAPP" MaximumWidthRequest="150" FontSize="26" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        <Label Text="Let's start!" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Sign In" Margin="20" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding SignInCommand}"/>
        <Button Text="Sign Up" Margin="20" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding SignUpCommand}"/>
    </VerticalStackLayout>
</ContentPage>
